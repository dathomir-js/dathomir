{
  "$schema": "../node_modules/oxlint/configuration_schema.json",
  "extends": ["oxlint:recommended"],
  "ignores": ["**/dist/**", "**/node_modules/**", "**/coverage/**"],
  "plugins": [],
  "rules": {
    "no-unused-vars": "error",
    "prefer-const": "error",
    "no-console": "error",
    "import/no-unresolved": "error"
  }
}
