{
  "name": "@dathomir/components",
  "description": "Web Components high-level API for Dathomir framework",
  "type": "module",
  "version": "0.0.7",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:dathomir-js/dathomir.git"
  },
  "bugs": {
    "url": "https://github.com/dathomir-js/dathomir/issues",
    "email": "dathomir@takumaru.dev"
  },
  "homepage": "https://github.com/dathomir-js/dathomir#readme",
  "author": "takuma-ru <takuma-ru@takumaru.dev> (https://github.com/takuma-ru/)",
  "keywords": [
    "dathomir",
    "web-components",
    "custom-elements",
    "shadow-dom",
    "framework",
    "frontend",
    "javascript",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./ssr": {
      "types": "./dist/ssr/index.d.mts",
      "import": "./dist/ssr/index.mjs",
      "require": "./dist/ssr/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint",
    "test": "vitest run --coverage",
    "release": "rlse"
  },
  "devDependencies": {
    "@dathomir/config": "workspace:*",
    "@takuma-ru/rlse": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@dathomir/reactivity": "workspace:*",
    "@dathomir/runtime": "workspace:*"
  }
}